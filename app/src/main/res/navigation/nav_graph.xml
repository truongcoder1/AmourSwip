<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/swipeFragment">

    <!-- SwipeFragment -->
    <fragment
        android:id="@+id/swipeFragment"
        android:name="vn.edu.tlu.cse.amourswip.view.fragment.chSwipeFragment"
        android:label="SwipeFragment">
        <action
            android:id="@+id/action_swipeFragment_to_listChatFragment"
            app:destination="@id/listChatFragment"
            app:popUpTo="@id/swipeFragment"
            app:popUpToInclusive="false"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out" />
    </fragment>

    <!-- ListChatFragment -->
    <fragment
        android:id="@+id/listChatFragment"
        android:name="vn.edu.tlu.cse.amourswip.view.fragment.chListChatFragment"
        android:label="ListChatFragment">
        <action
            android:id="@+id/action_listChatFragment_to_chatUserFragment"
            app:destination="@id/chatUserFragment"
            app:popUpTo="@id/listChatFragment"
            app:popUpToInclusive="false"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out" />
        <action
            android:id="@+id/action_listChatFragment_to_chatAIFragment"
            app:destination="@id/chatAIFragment"
            app:popUpTo="@id/listChatFragment"
            app:popUpToInclusive="false"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out" />
    </fragment>

    <!-- ProfileFragment -->
    <fragment
        android:id="@+id/profileFragment"
        android:name="vn.edu.tlu.cse.amourswip.view.fragment.trProfileFragment"
        android:label="ProfileFragment" />

    <!-- LikeFragment -->
    <fragment
        android:id="@+id/likeFragment"
        android:name="vn.edu.tlu.cse.amourswip.view.fragment.chLikeFragment"
        android:label="LikeFragment">
        <action
            android:id="@+id/action_likeFragment_to_profileMyFriendActivity"
            app:destination="@id/profileMyFriendActivity"
            app:popUpTo="@id/likeFragment"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_likeFragment_to_listChatFragment"
            app:destination="@id/listChatFragment"
            app:popUpTo="@id/likeFragment"
            app:popUpToInclusive="false"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out" />
    </fragment>

    <!-- ChatUserFragment -->
    <fragment
        android:id="@+id/chatUserFragment"
        android:name="vn.edu.tlu.cse.amourswip.view.fragment.trChatUserFragment"
        android:label="ChatUserFragment">
        <action
            android:id="@+id/action_chatUserFragment_to_listChatFragment"
            app:destination="@id/listChatFragment"
            app:popUpTo="@id/chatUserFragment"
            app:popUpToInclusive="false"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out" />
        <argument
            android:name="userId"
            app:argType="string" />
        <argument
            android:name="userName"
            app:argType="string" />
    </fragment>

    <!-- ChatAIFragment -->
    <fragment
        android:id="@+id/chatAIFragment"
        android:name="vn.edu.tlu.cse.amourswip.view.fragment.trChatAiFragment"
        android:label="ChatAIFragment">
        <action
            android:id="@+id/action_chatAiFragment_to_listChatFragment"
            app:destination="@id/listChatFragment"
            app:popUpTo="@id/chatAIFragment"
            app:popUpToInclusive="false"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out" />
    </fragment>

    <!-- ProfileMyFriendActivity -->
    <activity
        android:id="@+id/profileMyFriendActivity"
        android:name="vn.edu.tlu.cse.amourswip.view.activity.profile.trProfileMyFriendActivity"
        android:label="ProfileMyFriendActivity" />

</navigation>